@model IEnumerable<TStore.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Brands)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowinSlider)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Image != null)
                        {
                            <img src="data:png;base64,@Convert.ToBase64String(item.Image)"
                                 alt="Image for @item.Name"
                                 style="width:20px;" />
                        }
                        else
                        {
                            <span>بدون تصویر</span>
                        }
                    <td>
                            @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brands)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowinSlider)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
