@model TStore.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Create</title>
</head>
<body>

    <h4>Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormImage" class="control-label"></label>
                    <input type="file" asp-for="FormImage" class="form-control" />
                    <span asp-validation-for="FormImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brands" class="control-label"></label>
                    <input asp-for="Brands" class="form-control" placeholder="split(',')" />
                    <span asp-validation-for="Brands" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShowinSlider" class="control-label"></label>
                    <input type="checkbox" asp-for="ShowinSlider"   />
                    <span asp-validation-for="ShowinSlider" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
