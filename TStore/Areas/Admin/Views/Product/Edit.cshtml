@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TStore.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <h3>Edit Product</h3>

        <input type="hidden" asp-for="ProductId" />

        <input type="text" asp-for="Name" placeholder="Name" required />

        <input type="text" asp-for="Price" placeholder="Price" required />

        <input type="text" asp-for="Brand" placeholder="Brand" required />

        <label>
            Current Image:
            <img src="@Model.Image" style="width: 50px;" />
        </label>

        <label for="FormImage">
            Upload New Image:
            <input type="file" name="FormImage" value="" />
        </label>

        <textarea asp-for="Description" placeholder="Description" style="width:75%;max-width:75%;margin-bottom:10px;"></textarea>

        <label>Category:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))" style="margin-bottom:10px;"></select>

        <button type="submit" style="width:40%;">Save Changes</button>
    </form>
</div>