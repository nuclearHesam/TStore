@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_UserValidation.cshtml";
}

<link href="~/css/Checkbox.css" rel="stylesheet" />

<form method="post" asp-action="Login" asp-controller="Account">

    <div class="form-control">
        <input class="input input-alt" placeholder="Username" name="username" required type="text">
        <span class="input-border input-border-alt"></span>
    </div>

    <div class="form-control">
        <input class="input input-alt" placeholder="Password" name="Password" required type="password">
        <span class="input-border input-border-alt"></span>
    </div>

    <div style="display:flex; gap:5px;">
        <div class="container">
            <input type="checkbox" id="cbx" name="rememberMe" style="display: none;">
            <label for="cbx" class="check" style="display:flex; ">
                <svg width="18px" height="18px" viewBox="0 0 18 18">
                    <path d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z"></path>
                    <polyline points="1 9 7 14 15 4"></polyline>
                </svg>
            </label>
        </div>

        Remember Me
    </div>

    <button class="button" type="submit">
        Login
        <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd"
                  d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z"
                  clip-rule="evenodd"></path>
        </svg>
    </button>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

</form>